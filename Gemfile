source 'https://rubygems.org'

gem 'rails', '3.2.18'

gem 'mysql2', '0.3.18'
gem 'devise', '3.4.1'
gem 'thinking-sphinx', '~> 3.1.0'
gem 'will_paginate', '~> 3.0.6'


group :assets do
  # gems for sass and bootstrap
  gem 'bootstrap-sass', '~> 3.1.1.0 '
  gem 'autoprefixer-rails'
  gem 'sass-rails', '~> 3.2.3'
  gem 'jquery-rails'
  # gem for asset compression
  gem 'uglifier', '>= 1.0.3'
  # javascript runtime for uglifier
  gem 'therubyracer'
end


group :development, :test do
  # gems for debugging purpose
  gem 'pry'
  gem 'pry-remote'
  gem 'pry-stack_explorer'
  gem 'pry-byebug'
  gem 'hirb'

  # gems for testing
  gem 'rspec-rails', '~> 3.0'
end