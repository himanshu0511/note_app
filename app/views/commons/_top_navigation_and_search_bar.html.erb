<div>
  <a href="<%= root_url %>" class="logo pull-left"><h2>Note App</h2></a>
  <% unless current_user.nil? %>
      <%= label_tag 'search_bar', "Search", :class => "pull-left search_input_label" %>
      <%= text_field_tag 'search_bar', nil, :class => 'js_search_bar pull-left search_input', :data => {:url => url_for(:controller => 'search', :action => 'search_autocomplete')} %>
      <%= link_to "Log Out", destroy_user_session_path, :method => :delete, :class => 'pull-right' %>
  <% end %>
  <div class="js_search_results_container search_results_container"></div>
</div>
